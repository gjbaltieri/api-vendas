{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*":["src/modules/*"],
      "@shared/*": ["src/shared/*"]
    },
    "target": "es2017",
    "lib": ["es6"],
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDirs": ["./", "src"],
    "typeRoots": ["@types", "./node_modules/@types",
  "./node_modules/@types/"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
